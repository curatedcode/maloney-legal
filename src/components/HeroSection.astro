---
import Button from "./Button";
import { getButtonClass } from "./Button/getButtonClass";
import { PhoneIcon } from "./Icons";
---

<section
  class="relative overflow-hidden pb-16 pt-40 lg:pt-32 md:pb-24 bg-gradient-to-b from-gray-50 to-white"
>
  <div class="max-w-5xl mx-auto px-4 md:px-6 lg:max-w-7xl">
    <div
      class="flex flex-col items-center min-h-[60vh] lg:justify-between lg:gap-12 lg:mx-auto lg:flex-row lg:px-12"
    >
      <div class="lg:w-1/2 mb-10 lg:mb-0">
        <h2
          class="text-3xl md:text-4xl lg:text-5xl font-playfair font-bold text-custom-navy leading-tight"
        >
          Experienced Legal Counsel You Can Trust
        </h2>
        <p class="mt-4 text-lg text-gray-700 max-w-lg">
          Providing personalized legal services in Estate Planning, Probate, and
          Real Estate throughout Florida.
        </p>
        <div
          class="mt-8 flex flex-col lg:flex-row space-y-4 lg:space-y-0 lg:space-x-4"
        >
          <a href="#contact" class=`${getButtonClass({variant: "solid"})} h-12`>
            Book Free Consultation
          </a>
          <a
            href="tel:+19413018877"
            class="flex h-12 items-center justify-center lg:justify-start font-medium text-custom-navy hover:text-accent-9 transition-colors"
          >
            <PhoneIcon class="mr-2 size-6" />
            (941) 301-8877
          </a>
        </div>
        <div class="mt-12 flex items-center -mb-6 md:mt-8 md:mb-0">
          <div class="flex -space-x-4">
            {
              [1, 2, 3, 4].map((num) => (
                <img
                  src={`/images/person-placeholder-${num}.webp`}
                  class="w-10 h-10 rounded-full border-2 border-white"
                  height="40"
                  width="40"
                  aria-hidden="true"
                />
              ))
            }
          </div>
          <div class="ml-4">
            <div class="text-sm font-medium text-custom-navy">
              Trusted by clients
            </div>
            <div class="text-xs text-gray-500">Throughout Florida</div>
          </div>
        </div>
      </div>
      <img
        src="/images/stacey-maloney-headshot.webp"
        alt="Stacey Maloney Headshot"
        class="relative w-full aspect-square bg-gray-200 rounded-lg overflow-hidden shadow-xl lg:w-[37.5%]"
      />
    </div>
  </div>
</section>

{/* Trust indicators */}
<div class="mx-auto w-full mt-16 max-w-7xl">
  <div class="border-t border-gray-200 py-8 px-2">
    <div
      class="flex flex-wrap justify-center md:justify-between items-center gap-8"
    >
      <div class="text-center md:text-left">
        <p class="text-sm text-gray-500 font-medium">Florida Bar Association</p>
      </div>
      <div class="text-center md:text-left">
        <p class="text-sm text-gray-500 font-medium">5+ Years Experience</p>
      </div>
      <div class="text-center md:text-left">
        <p class="text-sm text-gray-500 font-medium">Free Consultations</p>
      </div>
      <div class="text-center md:text-left">
        <p class="text-sm text-gray-500 font-medium">By Appointment Only</p>
      </div>
    </div>
  </div>
</div>
